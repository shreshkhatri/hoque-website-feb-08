# HOQUE University Representative - Apache Configuration
# SEO and Performance Optimization

# ============================================
# ENABLE GZIP COMPRESSION
# ============================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
</IfModule>

# ============================================
# BROWSER CACHING
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
  
  # Videos
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/mpeg "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"
  
  # Documents
  ExpiresByType application/pdf "access plus 30 days"
  
  # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # JavaScript and CSS
  ExpiresByType text/javascript "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType text/css "access plus 30 days"
  
  # Default
  ExpiresDefault "access plus 2 days"
</IfModule>

# ============================================
# HTTP/2 PUSH OPTIMIZATION
# ============================================
<IfModule mod_http2.c>
  H2PushDiagnosticId on
</IfModule>

# ============================================
# SECURITY HEADERS
# ============================================
<IfModule mod_headers.c>
  # HSTS - Force HTTPS
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # X-Content-Type-Options
  Header always set X-Content-Type-Options "nosniff"
  
  # X-Frame-Options
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # X-XSS-Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Referrer-Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Permissions-Policy
  Header always set Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
  
  # Content-Security-Policy
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdn.vercel-analytics.com https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://*.vercel-analytics.com https://www.google-analytics.com https://www.googletagmanager.com; frame-ancestors 'none'"
  
  # Remove Server Header
  Header always unset Server
  Header always unset X-Powered-By
  Header always unset X-AspNet-Version
  Header always unset X-Runtime
</IfModule>

# ============================================
# REDIRECT HTTP TO HTTPS
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Force www
  RewriteCond %{HTTP_HOST} !^www\. [NC]
  RewriteCond %{HTTP_HOST} !=localhost [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Remove trailing slash (except for directories)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)/$ /$1 [L,R=301]
</IfModule>

# ============================================
# GZIP COMPRESSION FOR STATIC FILES
# ============================================
<IfModule mod_setenvif.c>
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|rar|zip|exe|flv|mov|avi|doc|docx|xls|xlsx|ppt|pptx|pdf|webp)$ no-gzip dont-vary
</IfModule>

# ============================================
# PROTECT SENSITIVE FILES
# ============================================
<FilesMatch "(\.(env|json|lock|yml|yaml|sql|xml|pem|key|p12|pfx|crt)$)|package\.json|\.git|\.env\.local">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# ============================================
# BLOCK COMMON BOTS AND SCRAPERS
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Block known bad bots
  SetEnvIfNoCase User-Agent "MJ12bot|AhrefsBot|SemrushBot|DotBot|MagentaBot" bad_bot
  SetEnvIfNoCase User-Agent "AltaVista|Indy Library|Infoseek|Looksmart|Lycos" bad_bot
  
  # Return 403 for bad bots
  <IfModule mod_authz_core.c>
    <RequireAll>
      Require all granted
      Require not env bad_bot
    </RequireAll>
  </IfModule>
</IfModule>

# ============================================
# UTF-8 ENCODING
# ============================================
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .rss .atom .svg

# ============================================
# MIME TYPES
# ============================================
AddType application/javascript js
AddType text/css css
AddType image/svg+xml svg svgz
AddEncoding gzip svgz

# ============================================
# ETAG CONFIGURATION
# ============================================
<IfModule mod_headers.c>
  Header unset ETag
  FileETag None
</IfModule>

# ============================================
# 404 ERROR HANDLING
# ============================================
ErrorDocument 404 "The requested page could not be found."

# ============================================
# DIRECTORY LISTING
# ============================================
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

# ============================================
# PHP OPTIMIZATION (if used)
# ============================================
<IfModule mod_php.c>
  php_flag short_tags On
  php_value max_execution_time 300
</IfModule>
